rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAgencyAdmin(agencyId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.agencyId == agencyId &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }

    function isClientUser(clientId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clientId == clientId;
    }

    // Agencies Collection
    match /agencies/{agencyId} {
      allow read: if isAuthenticated(); // Public profile read? Or restricted?
      allow write: if false; // Only admin SDK can create agencies for now
      
      // Agency Sub-collections
      match /clients/{clientId} {
        allow read, write: if isAgencyAdmin(agencyId);
        allow read: if isClientUser(clientId);
      }
    }

    // Users Collection
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
